@page
@model Gestion_livres.Pages.AuteurModel
@{
}
<br>
<h2> Liste des  Auteurs</h2>
<a class='btn btn-primary btn-sm' href='/Create'> Nouveau client</a>
<br />
<hr />
<table class=" table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom  </th>
            <th>Email  </th>
            <th>Télephone  </th>
            <th>Adresse  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listAuteur)
        {
            <tr>
                <td>@item.idAuteur</td>
                <td>@item.nomAuteur</td>
                <td>@item.emailAuteur</td>
                <td>@item.telephoneAuteur</td>
                <td>@item.adresseAuteur</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='/Editer?id=@item.idAuteur'> Editer </a>
                    <a class='btn btn-danger btn-sm' href='/Delete?id=@item.idAuteur'> Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
