@page
@model Gestion_livres.Pages.CategorieModel
@{
}
<br>
<h2> Liste des  Catégories</h2>
<a class='btn btn-primary btn-sm' href='/Create_cat'> Nouvelle Categorie</a>
<br />
<hr />
<table class=" table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom  </th>
            <th>Description  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listCategorie)
        {
            <tr>
                <td>@item.idCat</td>
                <td>@item.nomCat</td>
                <td>@item.descriptionCat</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='/Edit_cat?id=@item.idCat'> Editer </a>
                    <a class='btn btn-danger btn-sm' href='/Delete_cat?id=@item.idCat'> Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
